<idea-plugin version="2">
  <id>me.hehaiyang.codegen</id>
  <name>CodeGen</name>
  <version>0.3</version>
  <vendor email="hehaiyangwork@qq.com" url="https://github.com/hehaiyangwork/CodeGen">HeHaiYang</vendor>

  <description><![CDATA[
      <p>This plugin helps you to generate specific code.</p>
      <ul>
        <li>Generate the model class</li>
        <li>Generate the mapper xml</li>
        <li>Generate the sql script</li>
      </ul>
      <code>
      | id |  BIGINT(20) | 用户ID |
      | name |  VARCHAR(32) | 用户名称 |
      | mobile |  VARCHAR(11) | 用户手机号 |
      </code>
      <p>Please feel free to contact me and ask any questions or suggest some features</p>
    ]]></description>

  <change-notes><![CDATA[

    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="141.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
    <applicationConfigurable instance="me.hehaiyang.codegen.setting.FormatConfigurable"/>
    <applicationService serviceInterface="me.hehaiyang.codegen.setting.FormatSetting"
                        serviceImplementation="me.hehaiyang.codegen.setting.FormatSetting"/>

    <!--<toolWindow id="ToolsWindow.CodeMaker" anchor="right" factoryClass="me.hehaiyang.plugins.codegen.windows.CodeGenToolsWindow"/>-->
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action id="NewGroup.CodeGenAction" class="me.hehaiyang.codegen.CodeGenAction" text="CodeGen">
      <add-to-group group-id="NewGroup" anchor="first"/>
      <keyboard-shortcut keymap="$default" first-keystroke="alt control G"/>
    </action>
  </actions>

  <application-components>
    <component>
      <implementation-class>me.hehaiyang.codegen.HelloCompontent</implementation-class>
    </component>
  </application-components>

</idea-plugin>